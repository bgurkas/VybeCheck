@model LoginFormViewModel

@{
    ViewData["Title"] = "Existing User Login";
}

<h1>Existing User Login</h1>

@if (Model.Error is not null) {
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @if (Model.Error == "invalid-credentials"){
            <b>Invalid credentials. Please try again.</b>
        }
        else {
            <b>An unexpected error occurred.</b>
        }
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form asp-controller="Account" asp-action="ProcessLogin" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <label class="form-label" asp-for="Email"></label>
        <input class="form-control" asp-for="Email">
        <span class="form-text text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Password"></label>
        <input class="form-control" asp-for="Password">
        <span class="form-text text-danger" asp-validation-for="Password"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>